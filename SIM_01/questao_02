#include<stdio.h>

int main( ){
    int i,j,n;
    do{
        scanf("%d",&n);
    }while(n<1||n>20);
    for(i=0;i<n;i++){
        for(j=0;j<=i;j++){
            if(i==0 || j==0 || i==(n-1) || j==i)
                printf("* ");
            else
                printf("  ");
        }
        printf("\n");
    }
}
