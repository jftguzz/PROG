#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

float converteVelocidade(float v, char c){

    float transforma;

    if (c == 'k' && v >= 0){
        transforma = v/3.6;

    }else if(c == 'm' && v >= 0){
        transforma = v*3.6;

    }else
        transforma = 0;

    return transforma;
}
